<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_blocks">

    <fragment
        android:id="@+id/navigation_account"
        android:name="dev.darrenmatthews.etherblocks.ui.account.AccountFragment"
        android:label="@string/title_account"
        tools:layout="@layout/fragment_account" />

    <fragment
        android:id="@+id/navigation_blocks"
        android:name="dev.darrenmatthews.etherblocks.ui.blocks.BlocksFragment"
        android:label="@string/title_blocks"
        tools:layout="@layout/fragment_blocks" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="dev.darrenmatthews.etherblocks.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />
